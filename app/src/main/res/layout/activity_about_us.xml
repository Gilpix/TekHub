<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FAFAFA"

    android:layout_height="match_parent"
    tools:context="com.kulartist.tekhub.AboutUs"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7dp"
        android:paddingTop="10dp"
        android:background="#FFFFFF"
        android:layout_marginRight="7dp"


        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginBottom="6dp"
            app:srcCompat="@drawable/tehublogo" />

        <TextView
            android:id="@+id/college_open_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/carter_one"
            android:text="OPENING DAY : Mon - Sun"
            android:textAlignment="center"
            android:textColor="#797777"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/college_opening_hrs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/carter_one"
            android:text="TIMING : 8:00 AM-4:30 PM"
            android:textAlignment="center"
            android:textColor="#797777"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/college_contact_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/carter_one"
            android:text="CONTACT US : +1(514)292-1514"
            android:textAlignment="center"
            android:textColor="#797777"
            android:textSize="14sp" />

        <TableRow
            android:id="@+id/hr1"
            android:layout_width="match_parent"
            android:layout_height="1.8dp"
            android:layout_margin="10dp"
            android:background="#B3ABAB"></TableRow>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="11dp"

            android:layout_marginBottom="62dp"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="2dp"
            app:cardElevation="0dp">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp">


            <LinearLayout
                android:id="@+id/rate_lin_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#fff"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="9dp">

                <TextView
                    android:id="@+id/policy_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:onClick="rateUs"
                    android:text="INSTRUCTIONS"
                    android:textAlignment="center"
                    android:textColor="#575656"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/policy_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:inputType="textMultiLine"
                    android:text="1. TekHub is an android application to help Cegep de la gaspesie students to lend computer related stuff from the college.
                                    \n\n2. Only active students of Cegep college can use this application to borrow products from the college.
                                    \n\n3. Items can be picked up from college inventory on any day of week from 8:00 am to 4:30 pm except on holidays.
                                    \n\n4. Student can generate issue regarding item if it is broken, lost or other similiar problems.
                                    \n\n5. Student should inform college inventory head regarding late return of item one day before deadline.
                                    \n\n6. Student should show Order details with Student Id to pickup the item from college inventory."
                    android:textSize="13dp" />

            </LinearLayout>

            </ScrollView>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</RelativeLayout>