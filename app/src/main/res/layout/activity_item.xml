<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"

    android:layout_height="match_parent"
    tools:context="com.kulartist.tekhub.Item"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"


        android:orientation="vertical">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="345dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/item_images"

                    android:layout_width="170dp"
                    android:layout_height="170dp"

                    android:layout_centerInParent="true"
                    android:layout_marginStart="70dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginEnd="70dp"
                    android:layout_marginRight="70dp" />


            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="260dp"
                android:layout_marginRight="10dp"
                android:elevation="7dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="center"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="Ratings"
                            android:textColor="@color/student_profile_text_color"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/avg_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-3dp"
                            android:maxLines="1"
                            android:paddingTop="8dp"
                            android:text="_ _ _"
                            android:textColor="@color/student_profile_text_color"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="Condition"
                            android:textColor="@color/student_profile_text_color"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/item_condition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-3dp"
                            android:paddingTop="8dp"
                            android:text="New"
                            android:textColor="@color/student_profile_text_color"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Availability"
                            android:textColor="@color/student_profile_text_color"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/item_availability"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-3dp"
                            android:paddingTop="8dp"
                            android:text="Available"
                            android:textColor="@color/student_profile_text_color"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Borrowed"
                            android:textColor="@color/student_profile_text_color"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/item_borrowed_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-3dp"
                            android:paddingTop="8dp"
                            android:text="10 times"
                            android:textColor="@color/student_profile_text_color"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="5dp"
            android:elevation="4dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="3dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:id="@+id/item_description_lin_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:layout_marginRight="10dp"
                android:background="#fff"

                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/item_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".9"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/bree_serif"
                    android:inputType="textMultiLine"
                    android:maxLines="3"

                    android:paddingTop="5dp"

                    android:text="Apple MacBook Pro MGXA2LL/A 15-inch Laptop with Retina Display"


                    android:textColor="@color/student_profile_text_color"
                    android:textSize="16sp" />

                <TableRow
                    android:id="@+id/hr1"
                    android:layout_width="match_parent"
                    android:layout_height="1.8dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="12dp"
                    android:background="#B3ABAB"></TableRow>

                <TextView
                    android:id="@+id/item_desc_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:text="Description :"


                    android:textColor="@color/student_profile_text_color"


                    android:textSize="13sp"
                    android:textStyle="italic|bold" />

                <TextView
                    android:id="@+id/item_desc_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:inputType="textMultiLine"


                    android:paddingBottom="5dp"

                    android:text="Retina Display The 15â€‘inch model has over 5 million pixels so you can retouch your photos or edit a home movie in HD and experience an astounding level of clarity. Text is razor sharp, too, so even everyday things like browsing the web and revising a document are better than ever. It's a display worthy of world's most advanced notebook. Intel Core i7 Fourth-generation Intel Core i7 processors help you power through the most complicated technical computing tasks. Integrated Iris Pro Graphics and advanced NVIDIA graphics give you tons of pixel-driving horsepower. State-of-the-art I/O like Thunderbolt 2 gives you high-performance expansion unprecedented in a notebook."


                    android:textColor="@color/student_profile_text_color"
                    android:textSize="12sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/borrow_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"


            android:background="@xml/mybutton"
            android:onClick="borrowSelectedItem"
            android:text="Borrow item"
            android:textColor="@color/button_text_color_white"
            android:textSize="18sp"

            android:textStyle="bold" />

        <Button
            android:id="@+id/check_availability_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="7dp"




            android:background="@xml/mybutton"
            android:onClick="checkAvailableDate"
            android:text="Check Availability"
            android:textColor="@color/button_text_color_white"
            android:textSize="18sp"

            android:textStyle="bold" />

        <Button
            android:id="@+id/waiting_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@xml/mybutton"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:onClick="addToWaitingList"
            android:layout_marginTop="7dp"
            android:text="Add To waiting list"
            android:textColor="@color/button_text_color_white"
            android:textSize="18sp"
            android:textStyle="bold"

            />


        <TextView
            android:id="@+id/cust_feed_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:text="Customer Feedback"
            android:textAlignment="center"
            android:textColor="@color/student_profile_text_color"
            android:textSize="18sp"
            android:textStyle="bold" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="4dp"
            android:elevation="4dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="3dp"
            app:cardElevation="4dp">




        <ListView
                android:id="@+id/simpleListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"



                android:divider="#D6D4D4"
                android:dividerHeight="2dp"



                android:elevation="2dp"
                android:footerDividersEnabled="true"


                >

            </ListView>
        </androidx.cardview.widget.CardView>



    </LinearLayout>
</ScrollView>