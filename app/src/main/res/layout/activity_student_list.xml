<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context="com.kulartist.tekhubadmin.StudentList">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.kulartist.tekhub.ItemList">

        <androidx.appcompat.widget.Toolbar
            android:layout_marginBottom="10dp"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            app:layout_collapseMode="pin"
            app:titleTextColor="@android:color/white">

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
<!--                <ImageView
                    android:src="@drawable/left_arrow"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"  />-->
                <ImageView
                    android:id="@+id/back3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:layout_alignParentRight="false"

                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@xml/circular_button_white"
                    android:src="@drawable/back_butt_arrow"
                    android:onClick="backdashh"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/main_red"
                    android:textScaleX="1.3"
                    android:textSize="26sp"
                    android:textStyle="bold"


                    />

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="Students"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <SearchView
            android:id="@+id/studentListSearchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:background="@xml/search_bar_back"
            android:queryHint="type here" />

        <ListView
            android:id="@+id/studentListListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:divider="#E9E7E7"
            android:dividerHeight="2dp"
            android:elevation="2dp"
            android:footerDividersEnabled="false"
            android:padding="5dp"
            android:paddingTop="20dp"
            android:scrollbars="vertical" >

        </ListView>
    </LinearLayout>
</FrameLayout>