<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item ID: "/>
    <TextView
        android:id="@+id/adminItemId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id goes here"/>


</LinearLayout>
    <TextView
        android:id="@+id/adminItemName"
        android:textColor="@color/main_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Name goes here"/>

    <TextView
        android:id="@+id/adminItemDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="Name goes here"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Is it available: "/>
        <TextView
            android:id="@+id/adminItemIsAvail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id goes here"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Date: "/>
        <TextView
            android:id="@+id/adminItemAvailDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id goes here"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Condition: "/>
        <TextView
            android:id="@+id/adminItemCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id goes here"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Borrow Count: "/>
        <TextView
            android:id="@+id/adminItemBorrowNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id goes here"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Added Date: "/>
        <TextView
            android:id="@+id/adminItemAddedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id goes here"/>
    </LinearLayout>


</LinearLayout>